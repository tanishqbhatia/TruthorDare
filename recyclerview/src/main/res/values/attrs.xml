<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomRecyclerView">
        <attr name="crv_layoutMode" format="enum">
            <enum name="linearVertical" value="0" />
            <enum name="linearHorizontal" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="crv_gridSpanCount" format="integer|reference" />
        <attr name="crv_gridSpanSequence" format="string|reference" />
        <attr name="crv_spacing" format="dimension|reference" />
        <attr name="crv_verticalSpacing" format="dimension|reference" />
        <attr name="crv_horizontalSpacing" format="dimension|reference" />
        <attr name="crv_isSpacingIncludeEdge" format="boolean|reference" />
        <attr name="crv_showDivider" format="boolean|reference" />
        <attr name="crv_showLastDivider" format="boolean|reference" />
        <attr name="crv_dividerOrientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
            <enum name="both" value="2" />
        </attr>
        <attr name="crv_dividerColor" format="color|reference" />
        <attr name="crv_dividerPaddingLeft" format="dimension|reference" />
        <attr name="crv_dividerPaddingRight" format="dimension|reference" />
        <attr name="crv_dividerPaddingTop" format="dimension|reference" />
        <attr name="crv_dividerPaddingBottom" format="dimension|reference" />
        <attr name="crv_emptyStateView" format="integer|reference" />
        <attr name="crv_showEmptyStateView" format="boolean|reference" />
        <attr name="crv_loadMoreView" format="integer|reference" />
        <attr name="crv_snappy" format="boolean|reference" />
        <attr name="crv_snap_alignment" format="enum">
            <enum name="center" value="0" />
            <enum name="start" value="1" />
        </attr>
    </declare-styleable>
</resources>